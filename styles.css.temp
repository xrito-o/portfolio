body {
  font-family: "JetBrainsMono Nerd Font", monospace;
  background: #000;
  color: #fff;
  margin: 40px;
  text-align: center;
}
h1,
h2 {
  text-transform: uppercase;
}
section {
  margin: 40px 0;
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.6s ease-out, transform 0.6s ease-out;
}
.visible {
  opacity: 1;
  transform: translateY(0);
}
